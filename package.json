{
  "name": "express-react-template",
  "version": "1.0.0",
  "description": "",
  "main": "api/dist/index.js",
  "engines": {
    "node": "v16.10.0",
    "npm": "7.24.0"
  },
  "scripts": {
    "install-all": "npm-run-all install:backend install:frontend",
    "install:backend": "npm install",
    "install:frontend": "cd client && yarn",
    "start": "node ./api/dist/index.js",
    "migrate:db": "cd api/src && sequelize db:migrate --env production --url $DATABASE_URL && cd ../..",
    "server": "nodemon --ignore nodemon_ignore --inspect ./api/dist/index.js",
    "client": "cd client && yarn start",
    "clean:api": "shx rm -rf api/dist",
    "clean:client": "shx rm -rf client/dist client/.parcel-cache",
    "dev": "npm-run-all clean:api clean:client dev:run",
    "dev:run": "concurrently \"tsc -w\" \"npm run server\" \"npm run client\"",
    "clean-modules": "shx rm -rf node_modules",
    "clean": "shx rm -rf api/dist",
    "build": "npm-run-all install-tsc migrate:db tsc build:client",
    "build:client": "cd client && cross-env yarn clean && cross-env CI=true npx parcel build src/index.html",
    "tsc": "tsc",
    "install-tsc": "npm install -g typescript",
    "heroku-postbuild": "npm-run-all install-tsc migrate:db tsc install-all build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adminjs/express": "^4.1.0",
    "@adminjs/sequelize": "^2.1.4",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.36.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bs58": "^4.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "adminjs": "^5.7.3",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.3.0",
    "connect-session-sequelize": "^7.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.2",
    "path": "^0.12.7",
    "pg": "^8.7.3",
    "sequelize": "^6.17.0",
    "sequelize-cli": "^6.4.1",
    "shx": "^0.3.4",
    "typescript": "^4.6.2",
    "winston": "^3.6.0",
    "yarn": "^1.22.17"
  }
